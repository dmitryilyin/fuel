require 'rake_tasks'

#################################

empty_tasks = [
  'test::empty1',
  'test::empty2',
  'test::empty3',
]

example_tasks = [
  'example',
]

controller_tasks = [
  'checks::support',
  'checks::settings',
]

demo_tasks = [
  'demo::apache::install',
  'demo::apache::start',
  'demo::hello_world_page',
]

################################

deploy_preset 'empty', empty_tasks, 'Just several empty tasks'
deploy_preset 'examples', example_tasks, 'A single example task'
deploy_preset 'controller', controller_tasks, 'Deployment of the Simple Controller'
deploy_preset 'demo', demo_tasks, 'A set of demo tasks that deploy apache'
